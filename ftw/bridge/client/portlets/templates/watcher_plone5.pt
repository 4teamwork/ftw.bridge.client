<html
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    tal:omit-tag="python: True"
    i18n:domain="ftw.bridge.client">

    <section class="portlet portletWatcher">

        <header class="portletHeader clearfix">
            <span class="portletTopLeft"></span>
            <span class="portlet-title"
                  tal:content="view/title" />
            <span class="portletTopRight"></span>
        </header>

        <section class="portletContent odd">
            <div i18n:translate="msg_loading"
                 class="portlet-data-loading">Loading ...</div>
        </section>
    </section>

</html>
